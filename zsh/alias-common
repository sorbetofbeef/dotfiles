# XBPS
alias \
	kI='kiss install' \
	kB='kiss build' \
	kR='kiss remove' \
	kU='kiss update' \
	kS='kiss search \* | rg -i' 

# SV
alias \
	sA="doas link-service" \
	sRm="doas rm -Iv /var/service/${1}" \
	sU='doas sv up' \
	sD='doas sv down' \
	sO='doas sv once' \
	sRe='doas sv restart' \
	sM='doas sv status'

