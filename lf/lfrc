set icons true
set drawbox true
set globsearch true
set incsearch true
set number true
set relativenumber true
set scrolloff 4
set tabstop 2

map D delete
map H set hidden!

map a push $nvim<space>
map A push $mkdir<space>

map t $tar -xf $f
map T $for file in $fs ; do tar -xf $file ; done

map z $unzip $f
map Z $for file in $fs ; do unzip $file ; done

map <c-p>
map <c-p>i push !paru<space>-Syu<space>
map <c-p>r push !paru<space>-Rscu<space>
map <c-p>f push !paru<space>-Ss<space>

map +
map +x %doas chmod -v +x $fx
map +r %doas chmod -v +r $fx
map +w %doas chmod -v +w $fx

map -
map -x %doas chmod -v -x $fx
map -r %doas chmod -v -r $fx
map -w %doas chmod -v -w $fx

map <c-a> !g-add $f
map <c-g>a !g-add $f
map <c-g>c push !git<space>commit<space>-m<space>
map <c-g>p !git push
map <c-g>u push !git<space>push<space>-u<space>
map <c-g>
